{
    "name": "sawdustandcoffee/sawdust-coffee",
    "description": "Sawdust & Coffee E-commerce Platform",
    "type": "project",
    "require": {},
    "scripts": {
        "post-install-cmd": [
            "@php -r \"echo '=== Hostinger Deployment Started ===' . PHP_EOL;\"",
            "cd backend && composer install --no-dev --no-interaction --optimize-autoloader",
            "cd backend && php artisan migrate --force",
            "cd backend && php artisan config:cache",
            "cd backend && php artisan route:cache",
            "cd backend && php artisan view:cache",
            "cd frontend && npm ci --production",
            "cd frontend && npm run build",
            "cp -r frontend/dist/* backend/public/",
            "@php -r \"echo '=== Deployment Complete ===' . PHP_EOL;\""
        ],
        "post-update-cmd": [
            "@post-install-cmd"
        ]
    }
}
